@model College.Models.Dean
@{
    ViewBag.Title = "Edit dean";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "EditDean", controllerName: "College", method: FormMethod.Post))
{
    <div class="form-horizontal">

        @Html.HiddenFor(x => x.DeanId)

        <div class="form-group">
            @Html.LabelFor(x => x.Name, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Email, new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </div>

    </div>
}