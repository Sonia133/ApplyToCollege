@{
    ViewBag.Title = "Exams";
}

<h2>@ViewBag.Title</h2>

<br />
<br />
<br />
<br />
<table class="table table-hover table-responsive table-bordered" style="width: 35%">
    <thead>
        <tr>
            <th scope="col" class="col-md-1">Subject</th>
            <th scope="col" class="col-md-1">Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in ViewBag.Exams)
        {
            <tr>
                <th scope="row">@exam.Subject</th>
                <td>@Html.ActionLink("Details", "ExamDetails", "College", new { id = exam.ExamId }, FormMethod.Get)</td>
            </tr>
        }
    </tbody>
</table>
<br />

@if (User.IsInRole("Admin"))
{
    @Html.ActionLink("Add exam", "AddExam", new { id = ViewBag.Faculty.FacultyId })
}
<hr />

@Html.ActionLink("Back to the details of faculty", "Details", new { id = ViewBag.Faculty.FacultyId })
