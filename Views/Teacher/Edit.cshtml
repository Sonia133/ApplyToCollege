@model College.Models.Teacher
@{
    ViewBag.Title = "Edit teacher";
}


<div style="display: flex; flex-direction: column; align-items: center">
    <h2>@ViewBag.Title</h2>
    <br />
    <br />

    <div class="panel panel-info" style="background-color: #d9edf7; width: 50%">
        <h3 class="panel-heading text-center">@Model.Name</h3>
        @using (Html.BeginForm(actionName: "Edit", controllerName: "Teacher", method: FormMethod.Post))
        {
            <div class="form-horizontal panel-body">

                @Html.HiddenFor(x => x.TeacherId)

                <div class="form-group" style="margin-left: 10%">
                    @Html.LabelFor(x => x.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(b => b.Name, null, new { placeholder = "Subject", @class = "formcontrol" })
                        @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-left: 10%">
                    @Html.LabelFor(x => x.Subject, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(b => b.Subject, null, new { placeholder = "Subject", @class = "formcontrol" })
                        @Html.ValidationMessageFor(b => b.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-left: 10%">
                    @Html.LabelFor(x => x.Email, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(b => b.Email, null, new { placeholder = "Email", @class = "formcontrol" })
                        @Html.ValidationMessageFor(b => b.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group text-center" style="margin-right: 10%">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        }
    </div>
</div>